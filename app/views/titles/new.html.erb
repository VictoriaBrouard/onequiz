<div class="col-xs-10 col-xs-offset-1 newbook">
	<h1>Tell us your favourite book</h1>
</div>

<div class="col-xs-10 col-xs-offset-1 info">
	<%= simple_form_for @title do |f|%>
		<%= f.input :title %>
		<%= f.input :author %>
		<%= f.input :user_name %>
		<br />
		<%= f.submit 'Add', :class => 'btn btn-primary' %>
	<% end %>
</div>
